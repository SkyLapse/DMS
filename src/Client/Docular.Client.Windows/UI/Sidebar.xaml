<UserControl x:Class="Docular.Client.Windows.UI.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="clr-namespace:Docular.Client.Windows.Resources.Strings"
             xmlns:dms="clr-namespace:Docular.Client.Windows.UI"
             mc:Ignorable="d" 
             Width="110" d:DesignHeight="720" 
             Background="{DynamicResource BackgroundBrush}">
    <StackPanel Orientation="Vertical"
                CanHorizontallyScroll="False"
                CanVerticallyScroll="False">
        <dms:SidebarEntry Content="{x:Static s:Sidebar.Categories}" Icon="{DynamicResource BoxIcon}"/>
    </StackPanel>
</UserControl>
