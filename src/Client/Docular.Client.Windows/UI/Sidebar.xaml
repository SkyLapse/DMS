<UserControl x:Class="Docular.Client.Windows.UI.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" 
             xmlns:s="clr-namespace:Docular.Client.Windows.Resources.Strings"
             xmlns:dms="clr-namespace:Docular.Client.Windows.UI"
             MinWidth="110" MinHeight="720" 
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <DockPanel LastChildFill="False">
            <dms:SidebarElement Style="{StaticResource SidebarSpacerStyle}"
                                Height="10" 
                                DockPanel.Dock="Top"/>
            <dms:SidebarElement Content="{x:Static s:General.Docular}" 
                                Icon="{DynamicResource EyeLogo}" 
                                Selected="SidebarElement_Selected"
                                CenterColumnWidth="100*" 
                                IsSelected="True"
                                DockPanel.Dock="Top">
                <dms:SidebarElement.PageContent>
                    <Label Content="This is a test!"/>
                </dms:SidebarElement.PageContent>
            </dms:SidebarElement>
            <dms:SidebarElement Style="{StaticResource SidebarSpacerStyle}" 
                                Height="10" 
                                DockPanel.Dock="Top" />
            <dms:SidebarElement Content="{x:Static s:Sidebar.Search}" 
                                Icon="{DynamicResource SearchIcon}" 
                                Selected="SidebarElement_Selected"
                                DockPanel.Dock="Top"/>
            <dms:SidebarElement Content="{x:Static s:Sidebar.Documents}" 
                                Icon="{DynamicResource BoxIcon}" 
                                Selected="SidebarElement_Selected"
                                DockPanel.Dock="Top"/>
            <dms:SidebarElement Content="{x:Static s:Sidebar.Categories}" 
                                Icon="{DynamicResource FolderIcon}" 
                                Selected="SidebarElement_Selected"
                                DockPanel.Dock="Top"/>
            <dms:SidebarElement Content="{x:Static s:Sidebar.Tags}" 
                                Icon="{DynamicResource TicketIcon}" 
                                Selected="SidebarElement_Selected"
                                DockPanel.Dock="Top"/>
            <dms:SidebarElement Content="{x:Static s:Sidebar.Settings}" 
                                Icon="{DynamicResource SettingsIcon}" 
                                Selected="SidebarElement_Selected"
                                DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</UserControl>
