<Window x:Class="Docular.Client.Windows.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dms="clr-namespace:Docular.Client.Windows.UI"
        xmlns:s="clr-namespace:Docular.Client.Windows.Resources.Strings"
        Title="Docular DMS" 
        WindowStyle="None" ResizeMode="NoResize"
        Width="1280" Height="720" MinWidth="1280" MinHeight="720"
        Style="{DynamicResource ContentControlStyleBordered}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <DockPanel LastChildFill="False">
        <dms:Sidebar x:Name="Sidebar" 
                     DockPanel.Dock="Left"/>
    </DockPanel>
</Window>
