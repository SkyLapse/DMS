<Window x:Class="Docular.Client.Windows.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dms="clr-namespace:Docular.Client.Windows.UI"
        Title="Docular DMS" 
        WindowStyle="None" ResizeMode="NoResize"
        Width="1280" Height="720" MinWidth="1280" MinHeight="720"
        Style="{DynamicResource ContentControlStyleBordered}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Orientation="Horizontal">
        <dms:Sidebar x:Name="Sidebar" HorizontalAlignment="Left"/>
        <ContentControl Content="{Binding CurrentPageContent, ElementName=Sidebar}"/>
    </StackPanel>
</Window>
