<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LabelStyleRegular" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource BackgroundBrush}"/>
    </Style>

    <Style x:Key="LabelStyleRegularDarkLight" TargetType="Label" BasedOn="{StaticResource LabelStyleRegular}">
        <Setter Property="Foreground" Value="{DynamicResource DarkLightBrush}"/>
    </Style>

    <Style x:Key="LabelStyleRegularMediumLight" TargetType="Label" BasedOn="{StaticResource LabelStyleRegular}">
        <Setter Property="Foreground" Value="{DynamicResource MediumLightBrush}"/>
    </Style>

    <Style x:Key="LabelStyleRegularBrightLight" TargetType="Label" BasedOn="{StaticResource LabelStyleRegular}">
        <Setter Property="Foreground" Value="{DynamicResource BrightLightBrush}"/>
    </Style>
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Skins/Default.xaml"/>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>